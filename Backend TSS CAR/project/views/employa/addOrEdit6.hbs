<button onclick="history.back()">Go Back</button>
<h3 style="text-align: center">{{viewTitle}}</h3> 
   <br>
<form action="/employa" method="POST" autocomplete="off" style="float:center; margin-left: 170px " >
<input type="hidden" name="_id" value="{{employa._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{employa.fullName}}" style="height:40px ;width:400px; border-radius: 3px">
        <div class="text-danger">
            {{employa.fullNameError}}</div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="College Mail Id" value="{{employa.email}}" style="height:40px ;width:400px; border-radius: 3px">
        <div class="text-danger">
            {{employa.emailError}}</div>
    </div>
 
        <div class="form-group">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employa.mobile}}" style="height:40px ;width:400px; border-radius: 3px">
        </div>
    
    
        <div class="form-group">
            <label>Department</label><br>
            <select id="department" name="department" value="{{employa.department}}" style="height:40px ;width:400px; border-radius: 3px">
                <option value="" selected>Choose department</option>
                <option value="IT">IT</option>
                <option value="CSE">CSE</option>
                <option value="ECE">ECE</option>
                <option value="EEE">EEE</option>
                <option value="Mechanical">Mechanical</option>
                <option value="Civil">Civil</option>
                <option value="Mechatronics">Mechatronics</option>
                <option value="Data Science">Data Science</option>
                <option value="CSBS">CSBS</option>
              </select>
        </div> 
        
      
         <div class="form-group">
            <label>Existing/New Idea</label><br>
            <select id="idea" name="idea" value="{{employa.idea}}" style="height:40px ;width:400px; border-radius: 3px">
                <option value="" selected>Choose Idea Type</option>
                <option value="New Project Idea">New Project Idea</option>
                <option value="Existing Project Idea">Existing Project Idea</option>
            </select></div>
        

        <div class="form-group">
            <label>Project Name & ID</label>
            <input type="text" class="form-control" name="pid" placeholder="If it is existing project, mention the name & ID" value="{{employa.pid}}" style="height:40px ;width:400px; border-radius: 3px">
        </div>

        <div class="form-group">
            <label>Explain your project idea</label>
            <input type="text" class="form-control" name="pidea" placeholder="Explain Existing/New Project Concept" value="{{employa.pidea}}" style="height:40px ;width:400px; border-radius: 3px">
        </div>


         <div class="form-group">
            <label>Any Related Project Experience</label><br>
            <select id="pexp" name="pexp" value="{{employa.pexp}}" style="height:40px ;width:400px; border-radius: 3px">
                <option value="" selected>Choose Below</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
        </select></div>

        <div class="form-group">
            <label>Register Number</label>
            <input type="text" class="form-control" name="regs" placeholder="Enter your register number (i.e 20IT200)" value="{{employa.regs}}" style="height:40px ;width:400px; border-radius: 3px">
        </div>
    
    <div class="form-group col-md-6"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit My Idea</button>
        <a class="btn btn-secondary" href="/employa/list6"><i class="fa fa-list-alt"></i> View Previous Idea Records</a>
    </div>
</form>
